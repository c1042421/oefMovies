@model IEnumerable<Movie>

    @{
        ViewData["Title"] = "All Movies";
    }

    <table>
        <tr>
            <th>@(Html.DisplayNameFor(model => model.Title)) </th>
            <th>@(Html.DisplayNameFor(model => model.ReleaseDate))</th>
            <th>@(Html.DisplayNameFor(model => model.Genre))</th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.MovieId">
                        @(Html.DisplayFor(item => movie.Title))
                    </a>
                </td>
                <td>@(Html.DisplayFor(item => movie.ReleaseDate))</td>
                <td>@(Html.DisplayFor(item => movie.Genre))</td>
            </tr>
        }
    </table>
